<script>
const allQuestions = [
 {sentence:"___ am your father.",options:["I","He","She","They"],answer:"I",img:"https://cdn-icons-png.flaticon.com/512/1256/1256650.png",label:"Father",arabic:"ÿ£ŸÜÿß ŸàÿßŸÑÿØŸÉ."},
 {sentence:"___ is my mother.",options:["I","He","She","We"],answer:"She",img:"https://cdn-icons-png.flaticon.com/512/706/706807.png",label:"Mother",arabic:"ŸáŸä ŸàÿßŸÑÿØÿ™Ÿä."},
 {sentence:"___ is my brother.",options:["He","She","I","They"],answer:"He",img:"https://cdn-icons-png.flaticon.com/512/681/681494.png",label:"Brother",arabic:"ŸáŸà ÿ£ÿÆŸä."},
 {sentence:"___ is my sister.",options:["She","I","He","You"],answer:"She",img:"https://cdn-icons-png.flaticon.com/512/681/681519.png",label:"Sister",arabic:"ŸáŸä ÿ£ÿÆÿ™Ÿä."},
 {sentence:"___ are my parents.",options:["We","They","I","He"],answer:"They",img:"https://cdn-icons-png.flaticon.com/512/1256/1256648.png",label:"Parents",arabic:"ŸáŸÖ ŸàÿßŸÑÿØÿßŸä."},
 {sentence:"___ is my uncle.",options:["He","She","I","You"],answer:"He",img:"https://cdn-icons-png.flaticon.com/512/3233/3233483.png",label:"Uncle",arabic:"ŸáŸà ÿπŸÖŸä."},
 {sentence:"___ is my aunt.",options:["She","He","I","They"],answer:"She",img:"https://cdn-icons-png.flaticon.com/512/2922/2922566.png",label:"Aunt",arabic:"ŸáŸä ÿπŸÖÿ™Ÿä."},
 {sentence:"___ are my brothers.",options:["We","They","He","I"],answer:"They",img:"https://cdn-icons-png.flaticon.com/512/681/681494.png",label:"Brothers",arabic:"ŸáŸÖ ÿ•ÿÆŸàÿ™Ÿä."},
 {sentence:"___ are my sisters.",options:["They","We","She","I"],answer:"They",img:"https://cdn-icons-png.flaticon.com/512/681/681519.png",label:"Sisters",arabic:"ŸáŸÜ ÿ£ÿÆŸàÿßÿ™Ÿä."},
 {sentence:"___ are my friends.",options:["We","They","I","He"],answer:"We",img:"https://cdn-icons-png.flaticon.com/512/681/681443.png",label:"Friends",arabic:"ŸÜÿ≠ŸÜ ÿ£ÿµÿØŸÇÿßÿ¶Ÿä."}
];

let questions=[...allQuestions];
let currentQuestion=0;
let score=0;
let timerInterval;

const quiz=document.getElementById("quiz");
const timerEl=document.getElementById("timer");
const progress=document.getElementById("progressBar");

function startTimer(sec){
 let t=sec;
 timerInterval=setInterval(()=>{
   let m=String(Math.floor(t/60)).padStart(2,"0");
   let s=String(t%60).padStart(2,"0");
   timerEl.textContent=`${m}:${s}`;
   if(--t<0){ clearInterval(timerInterval); showResult(); }
 },1000);
}

function showQuestion(){
 if(currentQuestion>=questions.length){ showResult(); return; }
 const q=questions[currentQuestion];
 document.getElementById("questionNumber").textContent=`${currentQuestion+1}/${questions.length}`;
 progress.style.width=`${(currentQuestion/questions.length)*100}%`;
 progress.textContent=`${Math.round((currentQuestion/questions.length)*100)}%`;

 quiz.innerHTML=`
 <div class="question">
  <div class="question-text">${q.sentence.replace("___","<span class='blank'>_____</span>")}</div>
  <div class="image-box">
   <img src="${q.img}" onerror="this.src='https://cdn-icons-png.flaticon.com/512/1946/1946429.png'">
   <div class="image-label">${q.label}</div>
  </div>
  <div class="options-grid">
   ${q.options.map(o=>`<button onclick="checkAnswer(this,'${o}')">${o}</button>`).join("")}
  </div>
  <button class="listen-btn" onclick="speak('${q.sentence.replace('___',q.answer)}')">üîä Listen</button>
 </div>`;
}

function checkAnswer(btn,ans){
 const q=questions[currentQuestion];
 document.querySelectorAll("button").forEach(b=>b.disabled=true);
 if(ans===q.answer){ btn.classList.add("correct"); score++; }
 else{ btn.classList.add("wrong"); }
 document.getElementById("currentScore").textContent=score;
 setTimeout(()=>{ currentQuestion++; showQuestion(); },1200);
}

function speak(txt){
 let u=new SpeechSynthesisUtterance(txt);
 u.lang="en-US"; u.rate=0.8;
 speechSynthesis.speak(u);
}

function showResult(){
 clearInterval(timerInterval);
 quiz.style.display="none";
 document.getElementById("certificate").style.display="block";
 document.getElementById("finalScore").textContent=`Score: ${score}/${questions.length}`;
 document.getElementById("translationList").innerHTML=
 allQuestions.map(q=>`<li>${q.sentence.replace("___",q.answer)} ‚Üí ${q.arabic}</li>`).join("");
}

function restartQuiz(){
 location.reload();
}

showQuestion();
startTimer(25*60);
</script>

